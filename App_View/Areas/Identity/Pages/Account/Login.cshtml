        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="row row--center">
                    <div class="col-lg-6 col-md-8 u-s-m-b-30">
                        <div class="l-f-o">
                            <div class="l-f-o__pad-box">
                                <h1 class="gl-h1">I'M NEW CUSTOMER</h1>

                                <span class="gl-text u-s-m-b-30">By creating an account with our store, you will be able to move through the checkout process faster, store shipping addresses, view and track your orders in your account and more.</span>
                                <div class="u-s-m-b-15">

                                    <a class="l-f-o__create-link btn--e-transparent-brand-b-2" asp-area="Identity" asp-page="/Account/Register">

                                        CREATE AN ACCOUNT
                                    </a>
                                </div>
                                <h1 class="gl-h1">SIGNIN</h1>
                                 <div asp-validation-summary="All" class="text-danger"></div>
                                <span class="gl-text u-s-m-b-30">If you have an account with us, please log in.</span>
                                @if ((Model.ExternalLogins?.Count ?? 0) != 0)
                                {

                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                                        <div class="gl-s-api">
                                            @foreach (var provider in Model.ExternalLogins!)
                                            {
                                                @if (@provider.DisplayName == "Google")
                                                {
                                                    <div class="u-s-m-b-15">

                                                        <button type="submit" class="gl-s-api__btn gl-s-api__btn--gplus" name="provider" value="@provider.Name">
                                                            <i class="fab fa-google"></i>

                                                            <span>Signup with Google</span>
                                                        </button>
                                                    </div>
                                                }
                                                else if (@provider.DisplayName == "Facebook")
                                                {
                                                    <div class="u-s-m-b-15">

                                                        <button type="submit" class="gl-s-api__btn gl-s-api__btn--fb" name="provider" value="@provider.Name">
                                                            <i class="fab fa-facebook-f"></i>

                                                            <span>Signup with Facebook</span>
                                                        </button>
                                                    </div>
                                                }

                                            }

                                        </div>
                                    </form>
                                }
                                <form class="l-f-o__form" id="account" method="post">
                                   

                                    <div class="u-s-m-b-30">

                                        <label class="gl-label" for="login-email">EMAIL OR USERNAME*</label>

                                        <input asp-for="Input.UserNameOrEmail" class="input-text input-text--primary-style" type="text" id="login-email" placeholder="Enter E-mail" autocomplete="email" autocomplete="username">
                                        <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
                                    </div>
                                    <div class="u-s-m-b-30">
                                        
                                        
                                        <label class="gl-label" for="login-password">PASSWORD *</label>

                                        <input class="input-text input-text--primary-style" asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="Enter Password">
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="gl-inline">
                                        <div class="u-s-m-b-30">

                                            <button class="btn btn--e-transparent-brand-b-2" id="login-submit" type="submit">LOGIN</button>
                                        </div>
                                        <div class="u-s-m-b-30">

                                            <a class="gl-link" href="lost-password.html">Lost Your Password?</a>
                                        </div>
                                    </div>
                                  @*  <div class="u-s-m-b-30">

                                        <!--====== Check Box ======-->
                                       
                                        <div class="check-box">
                                            <input id="remember-me" class="form-check-input" asp-for="Input.RememberMe" />
                                            <div class="check-box__state check-box__state--primary">
