@page "/Login/"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="u-s-p-y-60">

    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="breadcrumb">
                <div class="breadcrumb__wrap">
                    <ul class="breadcrumb__list">
                        <li class="has-separator">

                            <a href="index.html">Home</a>
                        </li>
                        <li class="is-marked">

                            <a href="signin.html">Signin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====== Section 2 ======-->
<div class="u-s-p-b-60">

    <!--====== Section Intro ======-->
    <div class="section__intro u-s-m-b-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section__text-wrap">
                        <h1 class="section__heading u-c-secondary">ALREADY REGISTERED?</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Intro ======-->
    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="row row--center">
                <div class="col-lg-6 col-md-8 u-s-m-b-30">
                    <div class="l-f-o">
                        <div class="l-f-o__pad-box">
                            <h1 class="gl-h1">I'M NEW CUSTOMER</h1>

                            <span class="gl-text u-s-m-b-30">By creating an account with our store, you will be able to move through the checkout process faster, store shipping addresses, view and track your orders in your account and more.</span>
                            <div class="u-s-m-b-15">

                                <a class="l-f-o__create-link btn--e-transparent-brand-b-2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">CREATE AN ACCOUNT</a>
                            </div>
                            <h1 class="gl-h1">SIGNIN</h1>

                            <span class="gl-text u-s-m-b-30">If you have an account with us, please log in.</span>
                            <form class="l-f-o__form" id="account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" >
                                <div class="gl-s-api">
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        @if (provider.Name == "Facebook")
                                        {
                                            <div class="u-s-m-b-15">

                                                <button class="gl-s-api__btn gl-s-api__btn--fb" type="submit" name="provider" value="Facebook">
                                                    <i class="fab fa-facebook-f"></i>

                                                    <span>Signin with Facebook</span>
                                                </button>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="u-s-m-b-15">

                                                <button class="gl-s-api__btn gl-s-api__btn--gplus" type="submit" name="provider" value="Google">
                                                    <i class="fab fa-google"></i>

                                                    <span>Signin with Google</span>
                                                </button>
                                            </div>
                                        }
                                        
                                        @*<h1>Log in using your @provider.DisplayName account</h1>
                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>*@
                                    }
                                </div>
                                <div class="u-s-m-b-30">
                                    <label class="gl-label" for="login-email">E-MAIL *</label>
                                    <input asp-for="Input.UserNameOrEmail" class="input-text input-text--primary-style" autocomplete="email" autocomplete="username" aria-required="true" placeholder="Enter E-mail" />
                                    <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
                                </div>
                                <div class="u-s-m-b-30">

                                    <label class="gl-label" for="login-password">PASSWORD *</label>
                                    <input asp-for="Input.Password" class="input-text input-text--primary-style" autocomplete="current-password" aria-required="true" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="gl-inline">
                                    <div class="u-s-m-b-30">

                                        <button class="btn btn--e-transparent-brand-b-2" id="login-submit" type="submit">LOGIN</button>
                                    </div>
                                    <div class="u-s-m-b-30">

                                        <a class="gl-link" id="forgot-password" asp-page="./ForgotPassword">Lost Your Password?</a>
                                    </div>
                                </div>
                                <div class="u-s-m-b-30">

                                    <!--====== Check Box ======-->
                                    <div class="check-box">

                                        <input type="checkbox" id="remember-me">
                                        <div class="check-box__state check-box__state--primary">
                                            <label asp-for="Input.RememberMe" class="check-box__label">
                                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                    <!--====== End - Check Box ======-->
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Content ======-->
</div>
<!--====== End - Section 2 ======-->
