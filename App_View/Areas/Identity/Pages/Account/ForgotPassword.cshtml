@page "/QuenMatKhau.html"
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";

    //Layout = "/Views/Shared/_LayoutQMK.cshtml";
    Layout = "/Views/Shared/_Layout.cshtml";


}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

@*<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
*@
<link href="~/css/ForgotPassword.css" rel="stylesheet">

<div class="form-gap" style="
     padding-top: 40px;  padding-bottom: 40px;">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3><i class="fa fa-lock fa-4x"></i></h3>
                            <h2 class="text-center">Forgot Password?</h2>
                            <p>You can reset your password here.</p>
                            <div class="panel-body">

                                <form id="register-form" role="form" autocomplete="off" class="form" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                            <input asp-for="Input.Email" style="height:40px;" id="email" name="email" placeholder="email address" class="form-control" autocomplete="username" aria-required="true">
                                        </div>
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <button style="height:40px;" name="recover-submit" class="btn btn-lg btn-primary btn-block" type="submit"> Tiếp tục</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
