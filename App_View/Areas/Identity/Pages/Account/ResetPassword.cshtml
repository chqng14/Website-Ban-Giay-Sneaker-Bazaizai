@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}
<div class="new-l" >
    <div class="modal-dialog modal-dialog-centered" style="height:420px;">
        <div class="modal-content modal--shadow">
            <div class="modal-body">
                <div class="row u-s-m-x-0">
                    <div class="col-lg-6 new-l__col-1 u-s-p-x-0">

                        <a class="new-l__img-wrap u-d-block" href="shop-side-version-2.html">

                            <img class="u-img-fluid u-d-block" src="/PageIdentity/ExternalLoginCallback.jpg" alt="">
                        </a>
                    </div>
                    <div class="col-lg-6 new-l__col-2">
                        <div class="new-l__section u-s-m-t-30">
                           
                            <div class="u-s-m-b-30 new-l--center">
                                <p class="new-l__p1">Xin chào</p>
                            </div>
                            <div class="u-s-m-b-8 new-l--center">
                                <h3 class="new-l__h3">My</h3>
                            </div>
                            <form class="new-l__form">
                                <div class="u-s-m-b-15">

                                    <input class="news-l__input" type="text" placeholder="Mật khẩu mới">
                                </div>
                                <div class="u-s-m-b-15">

                                    <input class="news-l__input" type="text" placeholder="Nhập lại mật khẩu mới">
                                </div>
                                <div class="u-s-m-b-15">

                                    <button class="btn btn--e-brand-b-2" type="submit">Cập nhật</button>
                                </div>
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
