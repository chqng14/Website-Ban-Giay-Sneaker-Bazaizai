</div>
<iframe name="print_frame" width="0" height="0" frameborder="0" src="about:blank"></iframe>
<script>
    function printModalContent() {
        document.getElementById("printHoaDon").style.display = "none";
		document.getElementById("HuyHoaDon").style.display = "none";
		var printWindow = window.frames["print_frame"];
        var contentToPrint = $("#invoiceDetailContent").html();

        printWindow.document.open();
        printWindow.document.write('<html><head></head><body>' + contentToPrint + '</body></html>');
        printWindow.document.close();
        
        printWindow.print();
        document.getElementById("printHoaDon").style.display = "block";
		document.getElementById("HuyHoaDon").style.display = "block";
    }
	function HuyHoaDon() {

		Swal.fire({
			title: 'Xác nhận hủy đơn?',
			text: 'Bạn có chắc muốn hủy đơn hàng này không?',
			icon: 'warning',
			showCancelButton: true,
			confirmButtonText: 'Có',
			cancelButtonText: 'Không'
		}).then((result) => {
			if (result.isConfirmed) {
				var idHD = $('#printHoaDon').data('id');
				$.ajax({
					type: 'POST',
					url: "@Url.Action("XacNhanHuy", "TrangThaiGiaoHang")",
					data: { id: idHD },
					success: function (result) {
						Swal.fire({
							icon: 'success',
							title: 'Hủy thành công!',
							showConfirmButton: false,
							timer: 1500
						});
						setTimeout(function () {
							location.reload();
						}, 1500);
					},
					error: function (error) {

						console.error('Error updating status:', error);

						Swal.fire({
							icon: 'error',
							title: 'Đã xảy ra lỗi!',
							text: 'Vui lòng thử lại sau.',
							showConfirmButton: false,
							timer: 1500
						});
					}
				});
			} else {
				Swal.fire('Hủy bỏ', 'Hành động hủy hóa đơn đã được hủy.', 'info');
			}
		});
	}
</script>
