@using App_Data.DbContextt;
@using App_View.IServices;
@using App_View.Models.ViewModels;
@using static App_Data.Repositories.TrangThai;
@inject IKhuyenMaiServices khuyenMaiServices;
@model IEnumerable<SanPhamSaleViewModel>

@{
    ViewData["Title"] = "ApllySale";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Apply Sale</h1>

<style>
    .clickable-image {
        cursor: pointer;
    }
</style>

<div id="modal"></div>
<div class="modal bd-example-modal-xl">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title h4">Extra large modal</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <i class="anticon anticon-close"></i>
                </button>
            </div>
            <div class="modal-body">
                ...
