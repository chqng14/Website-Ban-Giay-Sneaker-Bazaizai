@using App_Data.DbContext;
@using App_Data.ViewModels.SanPhamChiTietViewModel;
@using App_View.Models.ViewModels;
@using static App_Data.Repositories.TrangThai;
@model List<ItemShopViewModel>

<link rel="stylesheet" type="text/css" href="~/Admin/css/ApplySale.css">
<div class="table-container">
    <table id="data-table" class="table text-center">

    <thead style="position: sticky; top: 0; background-color: white; z-index: 2;">
        <tr>
            <th>
                <input type="checkbox" id="select-all-checkbox" />
            </th>
            <th>
                Ảnh
            </th>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Kích cỡ
            </th>
            <th>
                Loại giày
            </th>
            <th>
                Màu sắc
            </th>
            <th>
                Thương Hiệu
            </th>
            <th>
                Giá bán
            </th>


        </tr>

    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            BazaizaiContext bazaizaiContext = new BazaizaiContext();
            var spct = bazaizaiContext.SanPhamChiTiets.Find(product.IdChiTietSp);
            <tr>
                <td class="sorting_1">

                    <input type="checkbox" class="voucher-checkbox" name="selectedProducts" value="@product.IdChiTietSp" />

                </td>
                <td><img src="/AnhSanPham/@product.Anh" style="height: 80px; width: auto" /></td>
                <td>@product.TenSanPham</td>
                <td>@product.KichCo</td>
                <td>@product.TheLoai</td>
                <td>@product.MauSac</td>
                <td>@product.ThuongHieu</td>
                <td>@product.GiaGoc</td>
            </tr>
        }
    </tbody>

</table>
</div>

