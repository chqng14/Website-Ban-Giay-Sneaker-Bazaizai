@model  App_Data.ViewModels.SanPhamChiTietViewModel.SanPhamChiTietViewModel
<div class="modal-dialog  modal-xl modal-dialog-scrollable">
    <div class="modal-content">
        <div class="modal-header align-items-center" style="background: #129dc1;">
            <i class="far fa-bell m-r-5" style="font-size: 33px"></i>
            <h5 class="modal-title" id="exampleModalLabel">THÔNG TIN SẢN PHẨM</h5>
            <button type="button" class="close" data-dismiss="modal">
                <i class="anticon anticon-close"></i>
            </button>
        </div>
        <div class="modal-body" style="background: #d3f6ff;">
            <form>
                <div class="page-header no-gutters has-tab" style="background: #cbc8c8">
                    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
                        <div class="media align-items-center m-b-15">
                            <div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                                @if (Model.ListTenAnh != null && Model.ListTenAnh.Any())
                                {
                                    <img src="/AnhSanPham/@Model.ListTenAnh[0]" alt="">

                                }
                            </div>
                            <div class="m-l-15">
                                <h4 class="m-b-0">@Model.SanPham</h4>
                                <p class="text-muted m-b-0">Code: @Model.Ma</p>
                            </div>
                        </div>
                        <div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                                <img src="/images/QRCode/@(Model.Ma).png" alt="">
                        </div>
                    </div>
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#product-edit-basic">Thông tin cơ bản</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#product-edit-option">Ảnh</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#product-edit-description">Mô tả</a>
                        </li>
                    </ul>
                </div>
                <div class="tab-content m-t-15">
                    <div class="tab-pane fade active show" style="height: auto" id="product-edit-basic">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title">Thông tin cơ bản</h4>
                                <div class="d-flex">
                                    <div class="table-responsive col-6">
                                        <table class="product-info-table m-t-20">
                                            <tbody>
                                                <tr>
                                                    <td>Giá bán:</td>
                                                    <td class="text-dark font-weight-semibold">
                                                        @Model.GiaBan?.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Giá nhập:</td>
                                                    <td class="text-dark font-weight-semibold">
                                                        @Model.GiaNhap?.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Thương hiệu:</td>
                                                    <td class="text-dark font-weight-semibold">@Model.ThuongHieu</td>
                                                </tr>
                                                <tr>
                                                    <td>Loại:</td>
                                                    <td class="text-dark font-weight-semibold">@Model.LoaiGiay</td>
                                                </tr>
                                                <tr>
                                                    <td>Kiểu đế giầy:</td>
                                                    <td class="text-dark font-weight-semibold">@Model.KieuDeGiay</td>
                                                </tr>
                                                <tr>
                                                    <td>Màu sắc:</td>
                                                    <td class="text-dark font-weight-semibold">@Model.MauSac</td>
                                                </tr>
                                                <tr>
                                                    <td>Xuất xứ:</td>
                                                    <td class="text-dark font-weight-semibold">@Model.XuatXu</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="table-responsive col-6">
                                        <table class="product-info-table m-t-20">
                                            <tbody>
                                                <tr>
                                                    <td>Kích cỡ:</td>
                                                    <td class="text-dark font-weight-semibold">@Model.KichCo</td>
                                                </tr>
                                                <tr>
                                                    <td>Dây:</td>
                                                    <td class="text-dark font-weight-semibold">@Model.Day</td>
                                                </tr>
                                                <tr>
                                                    <td>Khối lượng:</td>
                                                    <td class="text-dark font-weight-semibold">@Model.KhoiLuong</td>
                                                </tr>
                                                <tr>
                                                    <td>Số lượng:</td>
                                                    <td class="text-dark font-weight-semibold">
                                                        <span class="soLuong"></span>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Số lượng đã bán:</td>
                                                    <td class="text-dark font-weight-semibold">
                                                        @Model.SoLuongDaBan
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Ngày tạo:</td>
                                                    <td class="text-dark font-weight-semibold">@Model.NgayTao</td>
                                                </tr>
                                                @*<tr>
                        <td>Status:</td>
                        <td>
                            <span class="badge badge-pill badge-cyan">In Stock</span>
                        </td>
                    </tr>*@
                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" style="height: auto" id="product-edit-option">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    @foreach (var item in Model.ListTenAnh)
                                    {
                                        <div class="col-md-3">
                                            <img style="height: 220px" class="img-fluid" src="/AnhSanPham/@item" alt="">
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" style="height: auto" id="product-edit-description">
                        <div class="card">
                            <div class="card-body">
                                <div class="card-header">
                                    <h4 class="card-title">Mô tả sản phẩm</h4>
                                </div>
                                <div class="card-body">
                                    @Html.Raw(Model.MoTa)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer d-flex justify-content-between" style="background: #d0dae3 ">
            <div id="form-getID">
                <input asp-for="IdChiTietSp" hidden/>
                <button class="btn btn-primary" id="btn-coppy">
                    <i class="far fa-copy"></i>
                    <span>Coppy</span>
                </button>
            </div>
            <div>
                <button type="button" class="btn btn-warning" data-dismiss="modal">
                    <i class="anticon anticon-close-circle"></i>
                    <span>Close</span>
                </button>
            </div>
        </div>
    </div>
</div>
<script>
    function formatNumber(number) {
        if (number >= 1000) {
            const formattedNumber = (number / 1000).toFixed(1) + 'k';
            return formattedNumber.replace('.0', '');
        }
        return number.toString();
    }

    $(() => $('.soLuong').text(formatNumber('@Model.SoLuongTon')))

    $(document).off('click', '#btn-coppy');

    $(document).one('click', '#btn-coppy', function () {
        var id = $(this).closest('#form-getID').find('[name="IdChiTietSp"]').val();

        var data = {
            IdSanPhamChiTiet: id,
        };
        $.ajax({
            url: '/Admin/SanPhamChiTiet/GetPartialViewSanPhamCopy',
            type: 'Get',
            data: data,
            success: function (result) {
                $('#modalSanPham').fadeOut(30, function () {
                    $(this).empty().html(result).css('opacity', 0);

                    $(this).fadeIn(20, function () {
                        $(this).css('opacity', 1);
                    });
                });
            },
            error: function (xhr, status, error) {
                console.log(xhr.responseText);
                console.log(status);
                console.log(error);
                console.log(xhr);
            }
        });
    })
</script>