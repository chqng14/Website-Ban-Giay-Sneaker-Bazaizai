@using App_Data.DbContextt;
@model IEnumerable<App_Data.Models.Voucher>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    BazaizaiContext context = new BazaizaiContext();
}
<style>
    .checkbox_css {
        width: 20px;
        height: 20px;
    }

    .voucher-checkbox {
        width: 20px;
        height: 20px;
    }

</style>

<h1>Voucher</h1>

<div class="notification-toast top-right" id="notification-toast"></div>
<div class="d-md-flex">
    <div class="row w-100 m-b-30">
        <div class="col-lg-8">
            <form asp-action="Index" method="post">
                <div class="d-md-flex">
                    <div class="m-b-10">
                        <select id="trangThai" name="trangThai" class="custom-select">
                            <option value="tatCa">Tất cả</option>
                            <option value="hoatDong">Hoạt động</option>
                            <option value="chuaBatDau">Chưa bắt đầu</option>
                            <option value="khongHoatDong">Không hoạt động</option>
                            <option value="DaHuy">Đã huỷ</option>
                        </select>
                    </div>
                    <div class="m-b-10 ml-1">
                        <button type="submit" class="btn btn-primary">Lọc</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-lg-4 text-right">
            <h1>  <a class="btn btn-primary" asp-action="Create"><i class="anticon anticon-plus-circle"></i> Tạo mới</a></h1>

        </div>
    </div>
</div>
<table id="data-table" class="table" style="text-align:center">

    <thead>
        <tr>
            <th>
                Mã Voucher
            </th>
            <th>
                Tên
            </th>
            <th>
                Mức ưu đãi
            </th>
            <th>
                Điều kiện
            </th>
            <th>
                Loại hình
            </th>
            <th>
                Số lượng
            </th>
            <th>
                Ngày khởi tạo
            </th>
            <th>
                Ngày bắt đầu
            </th>
            <th>
                Ngày kết thúc
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                <input type="checkbox" id="select-all-checkbox" class="checkbox_css" />
            </th>

            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in ViewBag.TatCa)
        {
            <tr>
                <td>
                    @item.MaVoucher
                </td>
                <td>
                    @item.TenVoucher
                </td>
                <td>
                    @if (item.LoaiHinhUuDai == 1)
                    {
                        int mucUuDai = int.Parse(item.MucUuDai.ToString());
                        string mucUuDaiPhanTram = mucUuDai.ToString() + "%";
                        @mucUuDaiPhanTram
                    }
                    else
                    {
                        @string.Format("{0:N0}đ", item.MucUuDai)
                    }
                </td>
                <td>
                    @string.Format("{0:N0}đ", item.DieuKien)
                </td>
                <td>
                    @if (item.LoaiHinhUuDai == 0)
                    {
                        <span>Giảm giá theo tiền mặt</span>
                    }
                    @if (item.LoaiHinhUuDai == 1)
                    {
                        <span>Giảm giá %</span>
                    }
                    @if (item.LoaiHinhUuDai == 2)
                    {
                        <span>Miễn phí vận chuyển</span>
                    }
                </td>
                <td>
                    @item.SoLuong
                </td>
                <td>
                    @item.NgayTao
                </td>
                <td>
                    @item.NgayBatDau
                </td>
                <td>
                    @item.NgayKetThuc
                </td>
                <td>
                    @if (item.TrangThai == 0)
                    {
                        <span>Hoạt động</span>
                    }
                    else if (item.TrangThai == 1)
                    {
                        <span>Không hoạt động</span>
                    }
                    else if (item.TrangThai == 2)
                    {
                        <span>Chưa bắt đầu</span>
                    }
                    else if (item.TrangThai == 3)
                    {
                        <span>Đã huỷ</span>
                    }
                </td>
                <td>
                    <input type="checkbox" class="voucher-checkbox" data-value="@item.IdVoucher" />
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdVoucher"><i class="anticon anticon-edit"></i></a>
                    @*   <a asp-action="Details" asp-route-id="@item.IdVoucher"><i class="anticon anticon-eye"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.IdVoucher"><i class="anticon anticon-delete"></i></a> *@
                </td>
            </tr>
        }
    </tbody>
</table>

@* //Huỷ voucher đã chọn *@
<button class="btn btn-warning mr-2" data-toggle="modal" data-target="#cancel" style="color:white">Huỷ hoạt động của voucher đã chọn</button>
<div class="modal fade" id="cancel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: #3f87f5;">
                <h5 class="modal-title" id="exampleModalLabel">XÁC NHẬN</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <i class="anticon anticon-close"></i>
                </button>
            </div>
            <div class="modal-body" style="background: white;">
                <span id="thongBao">Bạn có huỷ voucher đã chọn không ?</span>
            </div>
            <div class="modal-footer" style="background: white">

                <button class="btn btn-primary bd-0 col-md-6" id="delete-button">Xác nhận</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

@* //Khôi phục voucher đã chọn *@
<button class="btn btn-success mr-2" data-toggle="modal" data-target="#restore">Khôi phục voucher đã chọn</button>
<div class="modal fade" id="restore">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: #3f87f5;">
                <h5 class="modal-title" id="exampleModalLabel">XÁC NHẬN</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <i class="anticon anticon-close"></i>
                </button>
            </div>
            <div class="modal-body" style="background: white;">
                <span id="thongBao">Bạn có khôi phục đã chọn không ?</span>
            </div>
            <div class="modal-footer" style="background: white">

                <button class="btn btn-primary bd-0 col-md-6" id="restore-button">Xác nhận</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#data-table').DataTable()
        $('#select-all-checkbox').click(function () {
            $('.voucher-checkbox').prop('checked', $(this).prop('checked'));
        });


        $('#delete-button').on('click', function () {
            // Lấy danh sách id voucher đã chọn
            var selectedIds = [];

            $('.voucher-checkbox:checked').each(function () {
                selectedIds.push($(this).data('value'));
            });
            // Gọi hàm để huỷ hoạt động voucher
            huyHoatDongVoucher(selectedIds);
        });
        $('#restore-button').on('click', function () {
            // Lấy danh sách id voucher đã chọn
            var selectedIds = [];

            $('.voucher-checkbox:checked').each(function () {
                selectedIds.push($(this).data('value'));
            });
            // Gọi hàm để huỷ hoạt động voucher
            KhoiPhucVoucher(selectedIds);
        });

    });
    // Hàm để gọi Ajax và chuyển về controller để huỷ hoạt động voucher
    function huyHoatDongVoucher(selectedIds) {
        // Thực hiện Ajax request để chuyển selectedIds về controller
        $.ajax({
            url: '/Admin/Vouchers/DeleteVoucherWithList', // Thay 'ControllerName' bằng tên thực tế của controller
            type: 'POST', // Hoặc 'GET' tùy thuộc vào yêu cầu của bạn
            data: { voucherIds: selectedIds },
            success: function (response) {
                // Xử lý kết quả từ controller nếu cần
                // alert('Huỷ hoạt động voucher thành công');
                var toastHTML = `<div class="toast fade hide" data-delay="3000">
                                     <div class="toast-header">
                                         <i class="anticon anticon-info-circle text-primary m-r-5"></i>
                                         <strong class="mr-auto">Thông báo</strong>
                                         <small>1 second ago</small>
                                         <button type="button" class="ml-2 close" data-dismiss="toast" aria-label="Close">
                                             <span aria-hidden="true">&times;</span>
                                         </button>
                                     </div>
                                     <div class="toast-body">
                                         Huỷ thành công (tự load lại sau 2s)
                                     </div>
                             </div>`
                $('#notification-toast').append(toastHTML)
                $('#notification-toast .toast').toast('show');
                setTimeout(function () {
                    $('#notification-toast .toast:first-child').remove();
                }, 3000);
                $('#cancel').modal('hide');
                taiLaiTrangSau2Giay();
            },
            error: function (error) {
                var toastHTML = `<div class="toast fade hide" data-delay="3000">
                                         <div class="toast-header">
                                             <i class="anticon anticon-info-circle text-primary m-r-5"></i>
                                             <strong class="mr-auto">Thông báo</strong>
                                             <small>1 second ago</small>
                                             <button type="button" class="ml-2 close" data-dismiss="toast" aria-label="Close">
                                                 <span aria-hidden="true">&times;</span>
                                             </button>
                                         </div>
                                         <div class="toast-body">
                                             ${error.responseText}
                                         </div>
                                 </div>`
                $('#notification-toast').append(toastHTML)
                $('#notification-toast .toast').toast('show');
                setTimeout(function () {
                    $('#notification-toast .toast:first-child').remove();
                }, 3000);
                $('#cancel').modal('hide');
            }
        });
    }
    function KhoiPhucVoucher(selectedIds) {
        // Thực hiện Ajax request để chuyển selectedIds về controller
        $.ajax({
            url: '/Admin/Vouchers/RestoreVoucherWithList', // Thay 'ControllerName' bằng tên thực tế của controller
            type: 'POST', // Hoặc 'GET' tùy thuộc vào yêu cầu của bạn
            data: { voucherIds: selectedIds },
            success: function (response) {
                // Xử lý kết quả từ controller nếu cần
                var toastHTML = `<div class="toast fade hide" data-delay="3000">
                                         <div class="toast-header">
                                             <i class="anticon anticon-info-circle text-primary m-r-5"></i>
                                             <strong class="mr-auto">Thông báo</strong>
                                             <small>1 second ago</small>
                                             <button type="button" class="ml-2 close" data-dismiss="toast" aria-label="Close">
                                                 <span aria-hidden="true">&times;</span>
                                             </button>
                                         </div>
                                         <div class="toast-body">
                                             Khôi phục thành công (tự load lại sau 2s)
                                         </div>
                                 </div>`
                $('#notification-toast').append(toastHTML)
                $('#notification-toast .toast').toast('show');
                setTimeout(function () {
                    $('#notification-toast .toast:first-child').remove();
                }, 3000);
                $('#restore').modal('hide');
                taiLaiTrangSau2Giay();
            },
            error: function (error) {
                var toastHTML = `<div class="toast fade hide" data-delay="3000">
                                             <div class="toast-header">
                                                 <i class="anticon anticon-info-circle text-primary m-r-5"></i>
                                                 <strong class="mr-auto">Thông báo</strong>
                                                 <small>1 second ago</small>
                                                 <button type="button" class="ml-2 close" data-dismiss="toast" aria-label="Close">
                                                     <span aria-hidden="true">&times;</span>
                                                 </button>
                                             </div>
                                             <div class="toast-body">
                                                 ${error.responseText}
                                             </div>
                                     </div>`
                $('#notification-toast').append(toastHTML)
                $('#notification-toast .toast').toast('show');
                setTimeout(function () {
                    $('#notification-toast .toast:first-child').remove();
                }, 3000);
                $('#restore').modal('hide');
            }
        });
    }
    function taiLaiTrangSau2Giay() {
        // Đợi 2 giây (2000 mili giây) và sau đó tải lại trang
        setTimeout(function () {
            window.location.reload();
        }, 2000);
    }

                // Gọi hàm khi cần tải lại trang sau 2 giây


</script>

