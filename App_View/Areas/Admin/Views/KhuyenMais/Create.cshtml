@model App_Data.Models.KhuyenMai

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>KhuyenMai</h4>
<hr />
<div class="container">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title ">  Create Khuyến Mãi <i class="anticon anticon-gift"></i> </h4>
        </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <div class="form-group col-md-4">
                <label asp-for="TenKhuyenMai" class="control-label"></label>
                <input asp-for="TenKhuyenMai" class="form-control" />
                <span asp-validation-for="TenKhuyenMai" class="text-danger"></span>
            </div>
                <div class="form-group col-md-4">
                <label asp-for="NgayBatDau" class="control-label"></label>
                <input asp-for="NgayBatDau" class="form-control" />
                <span asp-validation-for="NgayBatDau" class="text-danger"></span>
            </div>
                <div class="form-group col-md-4">
                <label asp-for="NgayKetThuc" class="control-label"></label>
                <input asp-for="NgayKetThuc" class="form-control" />
                <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
            </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                <label class="control-label">Loại hình khuyến mãi</label>
                <select asp-for="LoaiHinhKM" class="form-control" asp-items="ViewBag.ListLoaiHinh"></select>
            </div>
                <div class="form-group col-md-4">
                <label class="control-label">Mức giảm (%)</label>
                <select asp-for="MucGiam" class="form-control" asp-items="ViewBag.ListGiamGia"></select>

            </div>
                <div class="form-group col-md-4">
                <label asp-for="PhamVi" class="control-label"></label>
                <input asp-for="PhamVi" class="form-control" />
                <span asp-validation-for="PhamVi" class="text-danger"></span>
            </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    </div>
</div>

