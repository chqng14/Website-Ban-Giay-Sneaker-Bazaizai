            <div class="modal-footer" style="background: white">
                @if (Model.Any())
                {
                    <button class="btn btn-primary bd-0 col-md-6"><a asp-controller="DanhGia" asp-action="DuyetTatCaDanhGiaCuaMSp" asp-route-idSanPham="@Model.First().IdSanPham" style="color:white">Xác nhận</a> </button>
                }
                
                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#data-table').DataTable()
        $('#select-all-checkbox').click(function () {
            $('.voucher-checkbox').prop('checked', $(this).prop('checked'));

        });
        $('#btnTatCa').hide();
        $('#btnNhieu').hide();
        $('.voucher-checkbox').change(function () {
            // Kiểm tra nếu tất cả các checkbox trong tbody đều được chọn
            var allChecked = $('.voucher-checkbox:checked').length === $('.voucher-checkbox').length;

            // Hiển thị hoặc ẩn button tùy thuộc vào trạng thái của checkbox
            updateButtonVisibility();
        });

        $('#select-all-checkbox').change(function () {
            // Lấy trạng thái của checkbox "select-all-checkbox"
            var isChecked = $(this).prop('checked');

            // Thiết lập trạng thái của tất cả các checkbox khác trong tbody giống như checkbox "select-all-checkbox"
            $('.voucher-checkbox').prop('checked', isChecked);

            // Hiển thị hoặc ẩn button tùy thuộc vào trạng thái của checkbox
            updateButtonVisibility();
        });
        function updateButtonVisibility() {
            var anyChecked = $('.voucher-checkbox:checked').length > 0;
            var allChecked = $('.voucher-checkbox:checked').length === $('.voucher-checkbox').length;

            // Hiển thị hoặc ẩn button tùy thuộc vào trạng thái của checkbox
            if (allChecked) {
                $('#btnTatCa').show();
                $('#btnNhieu').hide();
            } else if (anyChecked) {
                $('#btnTatCa').hide();
                $('#btnNhieu').show();
            } else {
                // Nếu không có trường nào được chọn, ẩn cả hai nút
                $('#btnTatCa').hide();
                $('#btnNhieu').hide();
            }

        }


        $('#delete-button').on('click', function () {
            var idSanPham = $(this).data('idSanPham');
            // Lấy danh sách id voucher đã chọn
            var selectedIds = [];

            $('.voucher-checkbox:checked').each(function () {
                selectedIds.push($(this).data('value'));
            });
            // Gọi hàm để huỷ hoạt động voucher
            huyHoatDongVoucher(selectedIds, idSanPham);
        });


        $('#restore-button').on('click', function () {
            // Lấy danh sách id voucher đã chọn
            var selectedIds = [];

            $('.voucher-checkbox:checked').each(function () {
                selectedIds.push($(this).data('value'));
            });

        });

    });
    // Hàm để gọi Ajax và chuyển về controller để huỷ hoạt động voucher
    function huyHoatDongVoucher(selectedIds, idSanPham) {
        // Thực hiện Ajax request để chuyển selectedIds về controller
        $.ajax({
            url: '/Admin/DanhGia/DuyetNhieuDanhGia', // Thay 'ControllerName' bằng tên thực tế của controller
            type: 'POST', // Hoặc 'GET' tùy thuộc vào yêu cầu của bạn
            data: { Ids: selectedIds, idSanPham: idSanPham },
            success: function (response) {
                // Xử lý kết quả từ controller nếu cần
                // alert('Huỷ hoạt động voucher thành công');
                var toastHTML = `<div class="toast fade hide" data-delay="3000">
                                                 <div class="toast-header">
                                                     <i class="anticon anticon-info-circle text-primary m-r-5"></i>
                                                     <strong class="mr-auto">Thông báo</strong>
                                                     <small>1 second ago</small>
                                                     <button type="button" class="ml-2 close" data-dismiss="toast" aria-label="Close">
                                                         <span aria-hidden="true">&times;</span>
                                                     </button>
                                                 </div>
                                                 <div class="toast-body">
                                                     Duyệt thành công
                                                 </div>
                                         </div>`
                $('#notification-toast').append(toastHTML)
                $('#notification-toast .toast').toast('show');
                setTimeout(function () {
                    $('#notification-toast .toast:first-child').remove();
                }, 3000);
                $('#cancel').modal('hide');
                taiLaiTrang();
            },
            error: function (error) {
                var toastHTML = `<div class="toast fade hide" data-delay="3000">
                                                     <div class="toast-header">
                                                         <i class="anticon anticon-info-circle text-primary m-r-5"></i>
                                                         <strong class="mr-auto">Thông báo</strong>
                                                         <small>1 second ago</small>
                                                         <button type="button" class="ml-2 close" data-dismiss="toast" aria-label="Close">
                                                             <span aria-hidden="true">&times;</span>
                                                         </button>
                                                     </div>
                                                     <div class="toast-body">
                                                         ${error.responseText}
                                                     </div>
                                             </div>`
                $('#notification-toast').append(toastHTML)
                $('#notification-toast .toast').toast('show');
                setTimeout(function () {
                    $('#notification-toast .toast:first-child').remove();
                }, 3000);
                $('#cancel').modal('hide');
            }
        });
    }

    function taiLaiTrang() {


        setTimeout(function () {
            window.location.reload();
        }, 1000);


    }

</script>
