        var idspct = Model.First().IdSanPhamChiTiet;

        <h3>
            Danh sách đánh giá sản phẩm <a asp-area="" asp-controller="SanPhamChiTiets" asp-action="Details" asp-route-id="@idspct" style="color:orangered">
