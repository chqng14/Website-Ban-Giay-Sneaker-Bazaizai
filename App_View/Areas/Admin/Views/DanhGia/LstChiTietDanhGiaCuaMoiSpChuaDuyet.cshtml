                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenNguoiDung)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SanPhamTongQuat)
                </td>
                <td>
                    @Html.ActionLink("Duyệt", "DuyetDanhGia", new {  id=item.IdDanhGia ,idSanPham=item.IdSanPham }) |
                    @Html.ActionLink("Xóa", "Delete", new {  IdDanhGia=item.IdDanhGia  })
