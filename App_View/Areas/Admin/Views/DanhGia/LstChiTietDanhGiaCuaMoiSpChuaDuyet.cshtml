<button id="btnNhieu"  class="btn btn-warning mr-2" data-toggle="modal" data-target="#cancel" style="color:white">Duyệt các đánh giá đã chọn</button>
<div class="modal fade" id="cancel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: #3f87f5;">
                <h5 class="modal-title" id="exampleModalLabel">XÁC NHẬN</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <i class="anticon anticon-close"></i>
                </button>
            </div>
            <div class="modal-body" style="background: white;">
                <span id="thongBao">Bạn có duyệt các đánh giá đã chọn không ?</span>
            </div>
            <div class="modal-footer" style="background: white">
                @if (Model.Any() )
                {
                    <button class="btn btn-primary bd-0 col-md-6" id="delete-button" data-idSanPham="@Model.FirstOrDefault().IdSanPham">Xác nhận </button>


                }
              
                <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
            </div>
        </div>
    </div>
</div>

<button id="btnTatCa"  class="btn btn-warning mr-2" data-toggle="modal" data-target="#cancel2" style="color:white">Duyệt tất cả đánh giá </button>
<div class="modal fade" id="cancel2">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background: #3f87f5;">
                <h5 class="modal-title" id="exampleModalLabel">XÁC NHẬN</h5>
                <button type="button" class="close" data-dismiss="modal">
