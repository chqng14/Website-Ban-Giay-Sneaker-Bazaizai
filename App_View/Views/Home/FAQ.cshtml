                    requestAnimationFrame(captureQRCode);
                }, 1500); // 2 giây
            } else {
                requestAnimationFrame(captureQRCode); // Tiếp tục quét nếu chưa tìm thấy mã QR
            }
        }

        video.onloadedmetadata = function () {
            if (scanning) {
