@model App_Data.ViewModels.SanPhamChiTietViewModel.ItemDetailViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ProductDetailLayout.cshtml";
}
<input hidden name="IdChiTietSp" value="@Model.IdChiTietSp"/>
<div class="u-s-p-t-90">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">

                <!--====== Product Breadcrumb ======-->
                <div class="pd-breadcrumb u-s-m-b-30">
                    <ul class="pd-breadcrumb__list">
                        <li class="has-separator">

                            <a href="index.hml">Home</a>
                        </li>
                        <li class="has-separator">

                            <a href="shop-side-version-2.html">Electronics</a>
                        </li>
                        <li class="has-separator">

                            <a href="shop-side-version-2.html">DSLR Cameras</a>
                        </li>
                        <li class="is-marked">

                            <a href="shop-side-version-2.html">Nikon Cameras</a>
                        </li>
                    </ul>
                </div>
                <!--====== End - Product Breadcrumb ======-->
                <!--====== Product Detail Zoom ======-->
                <div class="pd u-s-m-b-30">
                    <div class="slider-fouc pd-wrap">
                        <div id="pd-o-initiate">
                            @foreach (var item in Model.DanhSachAnh)
                            {
                                <div class="pd-o-img-wrap" data-src="/AnhSanPham/@item">

                                    <img class="u-img-fluid" src="/AnhSanPham/@item" data-zoom-image="/AnhSanPham/@item" alt="">
                                </div>
                            }

                        </div>

                        <span class="pd-text">Click for larger zoom</span>
                    </div>
                    <div class="u-s-m-t-15">
                        <div class="slider-fouc">
                            <div id="pd-o-thumbnail">
                                @foreach (var item in Model.DanhSachAnh)
                                {
                                    <div>

                                        <img class="u-img-fluid" src="/AnhSanPham/@item" alt="" style="height: 84px">
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <!--====== End - Product Detail Zoom ======-->
            </div>
            <div class="col-lg-7">

                <!--====== Product Right Side Details ======-->
                <div class="pd-detail">
                    <div>

                        <span class="pd-detail__name">@Model.TenSanPham</span>
                    </div>
                    <div>
                        <div class="pd-detail__inline">

                            <span class="pd-detail__price">@Model.GiaBan</span>

                            <span class="pd-detail__discount">(76% OFF)</span><del class="pd-detail__del">$28.97</del>
                        </div>
                    </div>
                    <div class="u-s-m-b-15">
                        <div class="pd-detail__rating gl-rating-style">
                            <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star-half-alt"></i>

                            <span class="pd-detail__review u-s-m-l-4">

                                <a data-click-scroll="#view-review">@Model.SoLanDanhGia Reviews</a>
                            </span>
                        </div>
                    </div>
                    <div class="u-s-m-b-15">
                        <div class="pd-detail__inline">

                            <span class="pd-detail__stock">@Model.SoLuongTon in stock</span>

                            <span class="pd-detail__left">Only 2 left</span>
                        </div>
                    </div>
                    <div class="u-s-m-b-15">

                        <span class="pd-detail__preview-desc">@Model.MoTaNgan.</span>
                    </div>
                    <div class="u-s-m-b-15">
                        <div class="pd-detail__inline">

                            <span class="pd-detail__click-wrap">
                                <i class="far fa-heart u-s-m-r-6"></i>

                                <a href="signin.html">Add to Wishlist</a>

                                <span class="pd-detail__click-count">(@Model.SoLuotYeuThich)</span>
                            </span>
                        </div>
                    </div>
                    <div class="u-s-m-b-15">
                        <div class="pd-detail__inline">

                            <span class="pd-detail__click-wrap">
                                <i class="far fa-envelope u-s-m-r-6"></i>

                                <a href="signin.html">Email me When the price drops</a>

                                <span class="pd-detail__click-count">(20)</span>
                            </span>
                        </div>
                    </div>
                    <div class="u-s-m-b-15">
                        <ul class="pd-social-list">
                            <li>

                                <a class="s-fb--color-hover" href="#"><i class="fab fa-facebook-f"></i></a>
                            </li>
                            <li>

                                <a class="s-tw--color-hover" href="#"><i class="fab fa-twitter"></i></a>
                            </li>
                            <li>

                                <a class="s-insta--color-hover" href="#"><i class="fab fa-instagram"></i></a>
                            </li>
                            <li>

                                <a class="s-wa--color-hover" href="#"><i class="fab fa-whatsapp"></i></a>
                            </li>
                            <li>

                                <a class="s-gplus--color-hover" href="#"><i class="fab fa-google-plus-g"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="u-s-m-b-15">
                        <form class="pd-detail__form" method="post" asp-action="AddToCart" asp-controller="GioHangChiTiets">
                            <div class="u-s-m-b-15">

                                <span class="pd-detail__label u-s-m-b-8">Color:</span>
                                <div class="pd-detail__color">
                                    @foreach (var item in Model.LstMauSac)
                                    {
                                        if (Model.MauSac == item)
                                        {
                                            <div class="color__radio">

                                                <input type="radio" id="@item" value="@item" name="color" checked>

                                                <label class="color__radio-label" for="@item" style="background-color: @item"></label>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="color__radio">

                                                <input type="radio" id="@item" value="@item" name="color">

                                                <label class="color__radio-label" for="@item" style="background-color: @item"></label>
                                            </div>
                                        }

                                    }
                                </div>
                            </div>
                            <div class="u-s-m-b-15">

                                <span class="pd-detail__label u-s-m-b-8">Size:</span>
                                <div class="pd-detail__size">
                                    @foreach (var item in Model.LstKichThuoc)
                                    {
                                        if (Model.Size == item)
                                        {
                                            <div class="size__radio">

                                                <input type="radio" id="@item" name="size" checked>

                                                <label class="size__radio-label" for="@item">@item</label>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="size__radio">

                                                <input type="radio" id="@item" name="size">

                                                <label class="size__radio-label" for="@item">@item</label>
                                            </div>
                                        }

                                    }
                                </div>
                            </div>
                            <div class="pd-detail-inline-2">
                                <div class="u-s-m-b-15">

                                    <!--====== Input Counter ======-->
                                    <div class="input-counter">

                                        <span class="input-counter__minus fas fa-minus"></span>

                                        <input class="input-counter__text input-counter--text-primary-style" type="text" value="1" name="SoLuong" data-min="1" data-max="1000">

                                        <span class="input-counter__plus fas fa-plus"></span>
                                    </div>
                                    <!--====== End - Input Counter ======-->
                                </div>
                                <div class="u-s-m-b-15">
                                    
                                    <button class="btn btn--e-brand-b-2" type="submit" value="@Model.IdChiTietSp" name="IdSanPhamCT">Add to Cart</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="u-s-m-b-15">

                        <span class="pd-detail__label u-s-m-b-8">Product Policy:</span>
                        <ul class="pd-detail__policy-list">
                            <li>
                                <i class="fas fa-check-circle u-s-m-r-8"></i>

                                <span>Buyer Protection.</span>
                            </li>
                            <li>
                                <i class="fas fa-check-circle u-s-m-r-8"></i>

                                <span>Full Refund if you don't receive your order.</span>
                            </li>
                            <li>
                                <i class="fas fa-check-circle u-s-m-r-8"></i>

                                <span>Returns accepted if product not as described.</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <!--====== End - Product Right Side Details ======-->
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
    $(document).on('change', '[name="color"]', function(){
        console.log($('[name="IdChiTietSp"]').val());
        console.log($('[name="color"]:checked').val());
        var data = new FormData();
        data.append('id', $('[name="IdChiTietSp"]').val());
        data.append('mauSac', $('[name="color"]:checked').val());
        $.ajax({
            url: '/SanPhamChitiets/GetItemDetailViewModelWhenSelectColor',
            type: 'GET',
            data: {
                id: $('[name="IdChiTietSp"]').val(),
                mauSac: $('[name="color"]:checked').val()
            },
            success: function (result) {
                console.log(result);
            },
            error: function (xhr, status, error) {
                console.log(xhr.responseText);
                console.log(status);
                console.log(error);
                console.log(xhr);
            }
        });
    })
</script>