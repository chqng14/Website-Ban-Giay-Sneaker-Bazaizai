<script>
    $(document).on('click', '.copyButton', function () {
        var maVoucher = $(this).closest('.body_copy').find('.textToCopy').val()
        var tempInput = document.createElement("input");
        tempInput.value = maVoucher;
        document.body.appendChild(tempInput);

        // Chọn văn bản trong phần tử input tạm thời
        tempInput.select();
        document.execCommand("copy");

        // Xóa phần tử input tạm thời
        document.body.removeChild(tempInput);

        toast({
            title: "Đã sao chép!",
            message: "Đã sao chép mã vào clipboard: " + maVoucher,
            type: "success",
            duration: 5000
        });
    })
    
    // Sử dụng jQuery
    $(".notlogin").on('click', function () {
        toast({
            title: "Vui lòng đăng nhập!",
            message: "Bạn có thể dùng hoặc lưu mã khi đăng nhập",
            type: "error",
            duration: 5000
        });
    });

    $("#calmVoucher").on('click',function () {
        var maVoucher = document.getElementById('ma-voucher-input').value;
        // Sử dụng $.ajax để gửi yêu cầu AJAX
        $.ajax({
            type: "POST",
            url: "@Url.Action("SaveVoucher", "VoucherNguoiDung")",
            data: { MaVoucher: maVoucher }, // Gửi dữ liệu dưới dạng JSON
            // contentType: "application/json; charset=utf-8", // Đặt loại dữ liệu gửi đi
            success: function (result) {
                if (result) {
                    Swal.fire('Thông báo!', 'Nhận voucher thành công (tự reload sau 3s)!', 'success');
                    setTimeout(function () {
                        location.reload();
                    }, 3000);

                } else {
                    Swal.fire({
                        title: 'Thông báo!',
                        text: 'Lỗi khi nhận voucher!!!.',
                        icon: 'error',
                        confirmButtonText: 'Đóng'
                    });
                }
            },
            error: function (error) {
                console.error('Lỗi: ' + error);
            }
        });
    });


</script>
