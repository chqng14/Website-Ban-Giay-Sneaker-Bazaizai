<script>
    $(() => {
        $('a[data-modal-id="#quick-look"]').on('click', function () {
            var modalId = $(this).data('modal-id');

            var data = {
                idSanPhamChiTiet: $(this).closest('.product-o').data('id'),
            };
            $.ajax({
                url: '/SanPhamChiTiets/LoadPartialViewSanPhamChiTiet',
                type: 'GET',
                data: data,
                success: function (result) {
                    //$.ajax({
                    //    url: "/TabProduct", // Sử dụng tên View Component của bạn
                    //    method: "GET",
                    //    success: function (data) {
                    //        $("#tabProductContainer").html(data);
                    //    }
                    //});
                    $(modalId).html(result);
                    RESHOP.initInputCounter();
                    RESHOP.modalProductDetailInit();
                    $('.modal-backdrop').show();

                    $(modalId).show()
                    $('.dismiss-button').on('click', function () {
                        $(modalId).hide();
                        $('.modal-backdrop').hide();
                        $('body').css('overflow-y', 'auto');
                    });
                },
                error: function (xhr, status, error) {
                    console.log(xhr.responseText);
                    console.log(status);
                    console.log(error);
                    console.log(xhr);
                }
            });

        });
    })
</script>
