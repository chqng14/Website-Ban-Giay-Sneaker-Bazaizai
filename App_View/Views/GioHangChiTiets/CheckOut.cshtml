    <script>
        var ship = localStorage.getItem('phiship');
        console.log(ship);
        if (ship) {
            $('#phiship').text(parseInt(ship).toLocaleString("vi-VN").replace(/\./g, ',') + "đ");
        }else   {
            $('#phiship').text('0đ');
        }
        var tenNguoiNhan = selectedRow.querySelector('#ten').innerText;
        var sdt = selectedRow.querySelector('#sdt').innerText;
        var diaChi = selectedRow.querySelector('#diachi').innerText;

        // Tạo chuỗi thông tin
        var thongtin = tenNguoiNhan + ' ' + sdt + ' ' + diaChi;

        // Cập nhật nội dung của phần tử có id "thongtin"
        $('#thongtin').text(thongtin);
    </script>
