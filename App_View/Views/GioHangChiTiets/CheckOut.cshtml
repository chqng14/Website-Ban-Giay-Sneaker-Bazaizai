        var ship = localStorage.getItem('phiship');
        console.log(ship);
        if (ship) {
            $('#phiship').text(parseInt(ship).toLocaleString("vi-VN").replace(/\./g, ',') + "đ");
        }else   {
            $('#phiship').text('0đ');
        }
