@section Scripts{
    <!--====== lấy địa chỉ từ modal địa chỉ ======-->
    <script>
        var citydb ="";
        var districtdb ="";
        var wardsdb ="";
        document.addEventListener("DOMContentLoaded", function () {
            var radioButtons = document.querySelectorAll('input[name="default-address"]');
            var form = document.querySelector('.checkout-modal2__form');
            var thongtinElement = document.getElementById('thongtin');
            var editShipAddressModal = $('#edit-ship-address');

            // Kiểm tra xem có thông tin địa chỉ được lưu trong localStorage không
            var savedAddressId = localStorage.getItem('selectedAddressId');
            if (savedAddressId) {
                // Nếu có, chọn lại địa chỉ đó
                var savedRadioButton = document.getElementById(savedAddressId);
                if (savedRadioButton) {
                    savedRadioButton.checked = true;
                    updateThongTin(savedRadioButton);
                }
            } else {
                var tenNguoiNhan = selectedRow.querySelector('#ten').innerText;
                var sdt = selectedRow.querySelector('#sdt').innerText;
                var diaChi = selectedRow.querySelector('#diachi').innerText;

                // Tạo chuỗi thông tin
                var thongtin = tenNguoiNhan + ' ' + sdt + ' ' + diaChi;

                // Cập nhật nội dung của phần tử có id "thongtin"
                $('#thongtin').text(thongtin);
            }

            form.addEventListener('submit', function (event) {
                event.preventDefault(); // Ngăn chặn form tự động submit

                var selectedAddress = document.querySelector('input[name="default-address"]:checked');

                if (selectedAddress) {
                    // Lưu id của địa chỉ được chọn vào localStorage
                    localStorage.setItem('selectedAddressId', selectedAddress.id);

                    // Cập nhật thông tin và nội dung của phần tử có id "thongtin"
                    updateThongTin(selectedAddress);

                } else {
                    alert("Vui lòng chọn một địa chỉ trước khi lưu.");
                }
            });

            // Hàm cập nhật thông tin và nội dung của phần tử có id "thongtin"
