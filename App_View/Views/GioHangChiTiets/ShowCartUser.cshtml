@model IEnumerable<App_Data.ViewModels.GioHangChiTiet.GioHangChiTietDTO>

@{
    ViewData["Title"] = "ShowCartUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--====== End - Section 1 ======-->
<!--====== Section 2 ======-->
<div class="u-s-p-b-60">
    <!--====== Section Intro ======-->
    <div class="section__intro u-s-m-b-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section__text-wrap">
                        <h1 class="section__heading u-c-secondary">SHOPPING CART</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Intro ======-->
    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 u-s-m-b-30">
                    <div class="table-responsive">
                        <table class="table-p">
                            <tbody>

                                <!--====== Row ======-->
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="table-p__box">
                                                <div class="table-p__img-wrap">

                                                    <img class="u-img-fluid" src="/AnhSanPham/@item.LinkAnh[0]" alt="">
                                                </div>
                                                <div class="table-p__info">

                                                    <span class="table-p__name">

                                                        <a href="product-detail.html">@item.TenSanPham</a>
                                                    </span>

                                                    @* <span class="table-p__category">

                                                <a href="shop-side-version-2.html">Electronics</a>
                                                </span> *@
                                                    <ul class="table-p__variant-list">
                                                        <li>

                                                            <span>Size: @item.TenKichCo</span>
                                                        </li>
                                                        <li>

                                                            <span>Color: @item.TenMauSac</span>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </td>
                                        <td>

                                            <span class="table-p__price">@string.Format("{0:N0}đ", item.GiaGoc)</span>
                                        </td>
                                        <td>
                                            <div class="table-p__input-counter-wrap">

                                                <!--====== Input Counter ======-->
                                                <div class="input-counter">

                                                    <span class="input-counter__minus fas fa-minus" data-product-id="@item.IdSanPhamCT" data-cart-id="@item.IdGioHangChiTiet" data-value="@item.SoLuong" ></span>

                                                    <input class="input-counter__text input-counter--text-primary-style" type="text" data-product-id="@item.IdSanPhamCT" data-cart-id="@item.IdGioHangChiTiet" data-value="@item.SoLuong" value="@item.SoLuong" data-min="1" data-max="1000">
                                                    <span class="input-counter__plus fas fa-plus" data-product-id="@item.IdSanPhamCT" data-cart-id="@item.IdGioHangChiTiet" data-value="@item.SoLuong" ></span>
                                                </div>
                                                <!--====== End - Input Counter ======-->
                                            </div>
                                        </td>
                                        <td>
                                            <div class="table-p__del-wrap">
                                                <a class="far fa-trash-alt table-p__delete-link" href="@Url.Action("DeleteCart", "GioHangChiTiets", new { id = item.IdGioHangChiTiet })"></a>
                                            </div>
                                        </td>
                                    </tr>
                                }

                                <!--====== End - Row ======-->
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="route-box">
                        <div class="route-box__g1">

                            <a class="route-box__link" href="shop-side-version-2.html">
                                <i class="fas fa-long-arrow-alt-left"></i>

                                <span>CONTINUE SHOPPING</span>
                            </a>
                        </div>
                        <div class="route-box__g2">

                            <a class="route-box__link" href="@Url.Action("DeleteAllCart", "GioHangChiTiets")">
                                <i class="fas fa-trash"></i>
                                <span >CLEAR CART</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Content ======-->
</div>
<!--====== End - Section 2 ======-->
<!--====== Section 3 ======-->
<div class="u-s-p-b-60">

    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 u-s-m-b-30">
                    <form class="f-cart">
                        <div class="row">
                            <div class="col-lg-4 col-md-6 u-s-m-b-30">
                                <div class="f-cart__pad-box">
                                    <h1 class="gl-h1">DỰ TOÁN VẬN CHUYỂN</h1>

                                    <span class="gl-text u-s-m-b-30">Nhập địa chỉ của bạn để ước tính vận chuyển.</span>
                                    <div class="u-s-m-b-30">

                                        <!--====== Select Box ======-->
                                        <!--====== Thành phố ======-->
                                        <label class="gl-label" for="city">THÀNH PHỐ *</label><select class="select-box select-box--primary-style" id="city" required>
                                            <option selected>Chọn thành phố</option>
                                        </select>
                                        <!--====== End - Select Box ======-->
                                    </div>
                                    <div class="u-s-m-b-30">

                                        <!--====== Select Box ======-->
                                        <!--====== Huyện ======-->
                                        <label class="gl-label" for="district">HUYỆN *</label><select class="select-box select-box--primary-style" id="district" required>
                                            <option selected>Chọn huyện</option>
                                        </select>
                                        <!--====== End - Select Box ======-->
                                    </div>
                                    <div class="u-s-m-b-30">

                                        <!--====== Select Box ======-->
                                        <!--====== Phường/Xã ======-->
                                        <label class="gl-label" for="wards">PHƯỜNG/XÃ *</label><select class="select-box select-box--primary-style" id="wards" required>
                                            <option selected>Chọn phường/xã</option>
                                        </select>
                                        <!--====== End - Select Box ======-->
                                    </div>
                                    

                                    <span class="gl-text" style="color:red">Lưu ý: Có một số thành phố áp dụng miễn phí vận chuyển, nếu không phí vận chuyển sẽ được tính theo địa chỉ của bạn.</span>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 u-s-m-b-30">
                                <div class="f-cart__pad-box">
                                    <h1 class="gl-h1">NOTE</h1>

                                    <span class="gl-text u-s-m-b-30">Add Special Note About Your Product</span>
                                    <div>

                                        <label for="f-cart-note"></label><textarea class="text-area text-area--primary-style" id="f-cart-note"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-6 u-s-m-b-30">
                                <div class="f-cart__pad-box">
                                    <div class="u-s-m-b-30">
                                        <table class="f-cart__table">
                                            <tbody>
                                                <tr>
                                                    <td>PHÍ SHIP</td>
                                                    <td id="phiship">0đ</td>
                                                </tr>
                                                <tr>
                                                    <td>TẠM TÍNH</td>
                                                    <td id="tamtinh">@string.Format("{0:N0}đ", Model.Sum(x => x.SoLuong * x.GiaGoc))</td>
                                                </tr>
                                                <tr>
                                                    <td>TỔNG TIỀN</td>
                                                    <td id="tongtien">@string.Format("{0:N0}đ", Model.Sum(x => x.SoLuong * x.GiaGoc))</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div>
                                        <a class="btn btn--e-brand-b-2" href="/GioHangChiTiets/CheckOut">
                                            PROCEED TO CHECKOUT
                                        </a>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Content ======-->
</div>
<!--====== End - Section 3 ======-->

