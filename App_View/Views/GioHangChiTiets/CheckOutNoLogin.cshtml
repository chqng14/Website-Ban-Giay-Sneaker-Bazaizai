        var IdVoucher = "";
        function voucher(value) {
            if (value != null && value.trim() != "") {
                var ma = { ma: value };
                $.ajax({
                    url: '/Voucher/GetVoucherByMa',
                    type: 'GET',
                    data: ma,
                    success: function (result) {
                        $('#textvoucher').text("");
                        loaiuudai = result.loaiuudai;
                        // Áp dụng giảm giá từ voucher
                        if (phiship == 0 && loaiuudai == 2) {
                            Swal.fire({
                                title: "Vui lòng nhập địa chỉ trước khi áp dụng freeship",
                                icon: "warning",
                                showConfirmButton: false,
                                timer: 1500
                            });
                        } else {
                            toast({
                                title: "Áp dụng thành công!",
                                type: "success",
                                duration: 2000
                            });
                            MucUuDai = result.mucuidai;
                            IdVoucher = result.idVoucher;
                            $('input[name="IdVoucher"]').val(IdVoucher);
                            applyDiscount(MucUuDai);
                        }
                    },
                    error: function (xhr, status, error) {
                        MucUuDai = "";
                        $('#textvoucher').text("mã không hợp lệ");
                        applyDiscount(0);
                    }
                });
            } else {
                $('#textvoucher').text("");
                // Nếu không có voucher, hiển thị tổng tiền không giảm giá
                applyDiscount(0);
            }
        }

        // Hàm áp dụng giảm giá
        function applyDiscount(discountAmount) {
            if (discountAmount == null || discountAmount == 0) {
                $('#TienGiam').text(discountAmount.toLocaleString("vi-VN") + "đ");
            }
            else if (loaiuudai == 0) {
                $('#TienGiam').text("-" + discountAmount.toLocaleString("vi-VN") + "đ");
            }
            else if (loaiuudai == 2) {
                discountAmount = phiship;
                $('#TienGiam').text("-" + discountAmount.toLocaleString("vi-VN") + "đ");
            }
            else {
                discountAmount = tongtienSanPham * discountAmount / 100;
                $('#TienGiam').text("-" + discountAmount.toLocaleString("vi-VN") + "đ");
            }
            document.querySelector('input[name="TienGiam"]').value = discountAmount;
            // Tính tổng tiền sau khi giảm giá
            var tamTinhGiaGiam = tongtienSanPham + parseFloat(phiship);
            tongTienSauGiamGia = tamTinhGiaGiam - discountAmount;
            // Hiển thị tổng tiền sau khi giảm giá
            totalAmountElement.innerText = tongTienSauGiamGia.toLocaleString("vi-VN").replace(/\./g, ',') + "đ";
            totalAmountElement.value = tongTienSauGiamGia.toString();
        }
