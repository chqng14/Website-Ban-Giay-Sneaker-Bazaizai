                            })
                            .catch(error => {
                                console.error(error);
                            });
                    });
                });

                $(document).ready(function () {
                    $('#wards').on('change', function () {
                        if ($('#wards').val() != null) {
                            isCalculatingShippingFee = true;
                            calculateShippingFee();
                            isCalculatingShippingFee = false;
                        }
                    });
                });
