@using System.Globalization;
@using static App_Data.Repositories.TrangThai;
@model IEnumerable<App_Data.ViewModels.VoucherNguoiDung.VoucherNguoiDungDTO>

@{
    Layout = "/Views/Shared/_LayoutUser.cshtml";
}

<style>
    .tabs {
        justify-content: center;
        display: flex;
        border: 1px solid #ccc;
        overflow: hidden;
        background-color: white;
        margin-bottom: 15px;
        border-radius: 10px;
        min-width: -webkit-fill-available;
    }


    .tab-item {
        flex: 1;
        font-size: 12px;
        text-align: center;
        padding: 10px 0;
        cursor: pointer;
        color: #333333;
        transition: background-color 0.3s;
        font-weight: 600;
    }

        .tab-item.active {
            background-color: #ff4500;
            color: #fff;
            font-weight: 600;
        }

    .m-order__list {
        min-width: -webkit-fill-available;
        display: flex;
        flex-wrap: wrap; /* Cho phép các cột wrap (được xuống dòng) khi không đủ chỗ */
    }

    .m-order__get {
        width: 45%;
        height: 210px; /* Đặt chiều rộng của mỗi cột là 50% để chúng hiển thị trong cùng một cột */
        padding: 10px;
        margin-left: 20px;
        box-sizing: border-box;
    }

    .modal-content {
        margin: auto;
        position: relative;
        display: flex;
        flex-direction: column;
        width: 50%;
        pointer-events: auto;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid rgba(0,0,0,.2);
        border-radius: .3rem;
        outline: 0;
    }

</style>


@functions {
    // Hàm trợ giúp để định dạng số nguyên thành tiền tệ Việt Nam
    public string FormatCurrency(int? value)
    {
        return string.Format(new CultureInfo("vi-VN"), "{0:C0}", value);
    }
    public string FormatDate(DateTime? value)
    {
        if (value.HasValue)
        {
            string formattedDate = value.Value.ToString("dd.MM.yyyy HH:mm", System.Globalization.CultureInfo.CurrentCulture);
            return formattedDate;
        }
        return string.Empty; // hoặc bạn có thể trả về một giá trị mặc định khác nếu cần
    }
}

